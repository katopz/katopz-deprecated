package com.sleepydesign.utils{	import flash.display.*;	import flash.events.*;	import flash.text.TextField;	import flash.text.TextFormat;	public class DebugUtil 	{		public static var label:TextField;				public static function init(container:DisplayObjectContainer, x:Number, y:Number) : void 		{			if(!label)			{				label = new TextField();				label.autoSize = "left"				label.cacheAsBitmap = true;				label.multiline = true;				label.defaultTextFormat = new TextFormat("Tahoma", 12, 0xFFFFFF);				label.background = true;				label.backgroundColor = 0x000000;								label.x = x;				label.y = y;								container.addChild(label);			}		}	}}