<languageVersion: 1.0;>
kernel ZSort
<
	namespace: "PBDT";
	vendor: "katopz";
	version: 1;
	description: "Sort z vertices";
>
{
	input image4 source;
	output pixel4 target;

	void evaluatePixel()
	{
		pixel4 px = sample(source, outCoord());
		target = pixel4(px[0], px[1], px[2], px[0] + px[1] + px[2]);
	}
}