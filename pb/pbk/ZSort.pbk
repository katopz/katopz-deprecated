<languageVersion: 1.0;>
kernel ZSort
<
	namespace: "PBDT";
	vendor: "katopz";
	version: 1;
	description: "Sort z vertices";
>
{
	input image3 source;
	output pixel3 target;

	void evaluatePixel()
	{
		pixel3 px = sample(source, outCoord());
		target = pixel3(sin(px[0]), sin(px[1]), sin(px[2]));
	}
}